version: "3.5"

services:
    server:
        build:
            context: .
        expose:
            - 5000
        volumes:
            - .:/app:ro
            - archive-volume:/data/archive
        links:
            - elastic

    elastic:
        image: docker.elastic.co/elasticsearch/elasticsearch-oss:6.5.4
        volumes:
            - elastic-volume:/usr/share/elasticsearch/data

    nginx:
        restart: always
        image: nginx:latest
        ports:
            - "8080:8080"
        volumes:
            - ./static:/www/static:ro
            - ./etc/nginx.conf:/etc/nginx/conf.d/default.conf
        links:
            - server

volumes:
    elastic-volume:
    archive-volume:

