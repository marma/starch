version: "3.0"

services:
    server:
        build:
            context: .
        expose:
            - 5000
        #ports:
        #    - 5000:5000
        volumes:
            - .:/app:ro
            - archive-volume:/data/archive
        links:
            - elastic

    elastic:
        image: docker.elastic.co/elasticsearch/elasticsearch:6.1.1
        #ports:
        #    - 9200:9200
        volumes:
            - elastic-volume:/usr/share/elasticsearch/data

    nginx:
        restart: always
        image: nginx:latest
        ports:
            - "8080:8080"
        volumes:
            - ./static:/www/static:ro
            - ./etc/nginx.conf:/etc/nginx/conf.d/default.conf
        links:
            - server

volumes:
    elastic-volume:
    archive-volume:

